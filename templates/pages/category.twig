{% extends "_layouts/default" %}
{% import '_utilities/teaser' as post %}
{% set postQuery = craft.entries.relatedTo(category).limit(10) %}
{% paginate postQuery as pageInfo, posts %}

{% block content %}
  {% include '_partials/cover' %}
  <section class="page__content">
    {% if category.description %}
      <div class="container mx-auto py-12 px-2 text-balance">
        {{ category.description }}
      </div> 
    {% endif %}
    <section class="container mx-auto mb-6 px-2 divide-y divide-slate-300">
      {% for post in posts %}
        {{ post.teaser(post) }}
      {% endfor %}
      {% include '_partials/pagination' with { pageInfo: pageInfo } %}
    </section>
  </section>
{% endblock %}
